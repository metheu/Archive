worker_processes 1;

events { worker_connections 1024; }

http {

    upstream syncthing {
        server syncthing:8384;
    }

    upstream lidarr {
        server lidarr:8686;
    }


    server {
        listen 80;


        location /syncthing {
            proxy_pass           syncthing;
